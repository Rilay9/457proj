    "version": "0.2.0",
    "configurations": [
        
        
        {
            "name": "Python: Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/server_stuff/__main__.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "-p", "20000"
            ]
        },

        {
            "name": "Python: Client",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/client.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--host", "127.0.0.1",
                "--port", "20000"
            ]
        }
    ]
}